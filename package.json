{
  "name": "flash-game-player",
  "version": "1.0.0",
  "description": "Flash Game Player using Electron",
  "main": "main.js",
  "scripts": {
    "prestart": "tailwindcss -i ./views/input.css -o ./views/styles.css",
    "start": "electron .",
    "start:dev": "concurrently \"tailwindcss -i ./views/input.css -o ./views/styles.css --watch\" \"electron .\"",
    "build": "electron-builder",
    "build-css": "tailwindcss -i ./views/input.css -o ./views/styles.css",
    "build-css:watch": "tailwindcss -i ./views/input.css -o ./views/styles.css --watch"
  },
  "keywords": [
    "electron",
    "flash",
    "game"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.flashgameplayer.app",
    "productName": "VPT TOOLS",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon"
    }
  }
}
